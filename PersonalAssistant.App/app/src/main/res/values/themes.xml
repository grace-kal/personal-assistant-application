<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalAssistantApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neutral_769ECC</item>
        <item name="colorPrimaryVariant">@color/deep_sea_2A5689</item>
        <item name="colorOnPrimary">@color/whiteish_EEF3FA</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/morning_86BAF6</item>
        <item name="colorSecondaryVariant">@color/sky_63A7F5</item>
        <item name="colorOnSecondary">@color/blackish_3A3B3C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PersonalAssistantApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PersonalAssistantApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PersonalAssistantApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>