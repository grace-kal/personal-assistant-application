<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/content_page_gradient_drawable"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        tools:listitem="@layout/item_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/whisper_C0D5EE"
            android:background="@color/whisper_C0D5EE"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:hint="@string/type_a_message_hint" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/sendBtn"
            android:backgroundTint="@color/whisper_C0D5EE"
            android:textColor="@color/midnight_284261"/>
    </LinearLayout>
</LinearLayout>
